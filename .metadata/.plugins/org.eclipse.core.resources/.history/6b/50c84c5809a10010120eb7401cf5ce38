package com.akash;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.annotation.HttpConstraint;
import javax.servlet.annotation.ServletSecurity;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;


@WebServlet("/admin")
@ServletSecurity(
    @HttpConstraint(rolesAllowed = {"admin"})   // ðŸ‘ˆ Only "admin" role allowed
)
public class sqServlet extends HttpServlet{

	public void doGet(HttpServletRequest req,HttpServletResponse res) throws IOException {
//		int val = (int)req.getAttribute("k");
//		int val = Integer.parseInt(req.getParameter("k"));
		
//		HttpSession session = req.getSession();
//		int val=(int)session.getAttribute("k");
		int k=9;
		Cookie cookies[]=req.getCookies();
		for(Cookie c :cookies) {
			if(c.getName().equals("k")) {
				k= Integer.parseInt(c.getValue());
			}
		}
		int square =k*k;
//		System.out.println("the total is :" + total);
		
		
		
		PrintWriter out = res.getWriter();
		out.println("this is the squared value finally : "+square);
		}
}
